<assembly>
  <id>lang-dynjs-${project.version}</id>
    <formats>
        <format>zip</format>
    </formats>
    <baseDirectory>target</baseDirectory>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.build.directory}/classes</directory>
            <outputDirectory>${vertx.descriptor}</outputDirectory>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>src/main/conf/mod.json</source>
            <outputDirectory>${vertx.descriptor}</outputDirectory>
        </file>
    </files>
    <dependencySets>
        <dependencySet>
            <outputDirectory>${vertx.descriptor}/lib</outputDirectory>
            <unpack>false</unpack>
            <scope>runtime</scope>
            <excludes>
                <exclude>org.vert-x:vertx-core</exclude>
                <exclude>org.vert-x:vertx-platform</exclude>
                <exclude>org.jboss:jreadline</exclude>
                <exclude>com.google:guava</exclude>
                <exclude>org.easytesting:fest-assert</exclude>
                <exclude>org.easytesting:fest-util</exclude>
                <exclude>io.netty:netty</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>
</assembly>
