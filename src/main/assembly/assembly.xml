<assembly>
  <id>${artifactId}-${project.version}</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <files>
        <file>
          <source>${project.build.directory}/${artifactId}-${project.version}.jar</source>
          <outputDirectory>lib</outputDirectory>
        </file>
        <file>
            <source>src/main/conf/mod.json</source>
        </file>
    </files>
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <unpack>false</unpack>
            <scope>runtime</scope>
            <excludes>
                <exclude>org.vert-x:vertx-core</exclude>
                <exclude>org.vert-x:vertx-platform</exclude>
                <exclude>org.easytesting:fest-assert</exclude>
                <exclude>org.easytesting:fest-util</exclude>
                <exclude>io.netty:netty</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>
</assembly>
