<assembly>
  <id>lang-dynjs-${project.version}</id>
    <formats>
        <format>zip</format>
    </formats>
    <baseDirectory>target</baseDirectory>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.build.directory}/classes</directory>
            <outputDirectory>${artifactId}-${project.version}/lib</outputDirectory>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>${artifactId}-${project.version}/lib</outputDirectory>
            <unpack>true</unpack>
            <scope>runtime</scope>
            <excludes>
                <exclude>org.vert-x:vertx-core</exclude>
                <exclude>org.vert-x:vertx-platform</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>
</assembly>
